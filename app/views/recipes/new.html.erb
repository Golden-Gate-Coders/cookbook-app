<h1>New Recipe</h1>


<div class="container">
<%= form_tag "/recipes", method: :post do %>
  Title: <input type="text" name="recipe_title">
  <br />
  Ingredients: <input type="text" name="recipe_ingredients">
  <br />
  Directions: <input type="text" name="recipe_directions">
  <br />
  Chef: <%= collection_select(:recipe, :chef_id, Chef.all, :id, :name, prompt: "Select a Chef") %>
  <br />
  Prep Time: <input type="text" name="recipe_prep_time">
  <br />
  Address: <input type="text" name="recipe_address">
  <br />
  <input type="submit" value="Create Recipe">
<% end %>
</div>

