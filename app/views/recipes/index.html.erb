<%= form_tag "/search", method: :post do %>
  Search: <input type="text" name="search_term">
  <input type="submit" value="Search!">
<% end %>

<br />
<br />


<% @recipes.each_slice(3) do |three_recipes| %>
  <div class="row">
    <% three_recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="well">
          <a href="/recipes/<%= recipe.id %>">
            <h2><%= recipe.title %></h2>
            <h4>Prep Time: <%= recipe.prep_time %> minutes</h4>
            <br />
            <img class="index_recipe_image" src="<%= recipe.image %>">
          </a>
        </div>
      </div>
    <% end %>
  </div>
<% end %>